#!/usr/bin/env bash
set -euo pipefail

# Source: https://codeberg.org/EvanHahn/dotfiles

if [ ! $# -eq 1 ]; then
  echo 'mksh takes one argument' 1>&2
  exit 1
elif [ -e "$1" ]; then
  echo "$1 already exists" 1>&2
  exit 1
fi

echo '#!/usr/bin/env bash
set -euo pipefail

' > "$1"

chmod u+x "$1"

vim + "$1"
