[user]
	name = Mark Gerarts
	email = mark.gerarts@gmail.com

[alias]
	co = checkout
	st = status

[core]
	editor = vim
	
[init]
	defaultBranch = main

[push]
	default = simple
	autoSetupRemote = true

[pull]
	rebase = true

[tag]
	sort = -version:refname

# Delta settings
[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false
	line-numbers = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[help]
	autocorrect = prompt
